<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">EAT ZE DAMN BEERRRGGEERR!</h1>
  </div>
</div>

<div class="container">

  <div class="row">
    <div class="col-md-12">
      <img src="/assets/images/happyburger.jpg" alt="burger" class="img-responsive center-block">
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <h3>Desired Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          <h5>{{this.id}}. {{this.burger_name}}
            <form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
              <input type='hidden' name='devoured' value='true'>
              <button type='submit' class="btn btn-default">Devour it</button>
            </form>
          </h5>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-5">
      <h3 class="text-muted">Devoured Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
          <h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <form class="create-update-form" action="burgers/insertOne" method="POST">
        <div class="form-group">
          <textarea type="text" name="name"></textarea><br>
          <button class="btn btn-default" type="submit">Submit</button>
          <h5 class="text-center">Enter a burger you want to eat then click the Submit button.</h5>
        </div>
      </form>
    </div>
  </div>

</div>